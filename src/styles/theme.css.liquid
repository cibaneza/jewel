/* Font face */
@font-face {
    font-family: 'George X';
    src: local('George X Regular'), local('GeorgeX-Regular'),
        url('{{ "GeorgeX-Regular.woff2" | asset_url }}') format('woff2'),
        url('{{ "GeorgeX-Regular.woff" | asset_url }}') format('woff');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
}

@font-face {
    font-family: 'Suisse BP Intl';
    src: local('Suisse BP Int\'l Regular'), local('SuisseBPIntl-Regular'),
        url('{{ "SuisseBPIntl-Regular.woff2" | asset_url }}') format('woff2'),
